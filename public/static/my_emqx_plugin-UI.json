{
  "$form": {
    "hostname": {
      "label": {
        "en": "Hostname",
        "zh": "主机名"
      },
      "description": {
        "en": "The database host name.",
        "zh": "数据库主机名称。"
      },
      "flex": 12,
      "required": true,
      "rules": [
        {
          "type": "pattern",
          "value": "^([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]{0,61}[a-zA-Z0-9])(\\.([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]{0,61}[a-zA-Z0-9]))*$",
          "message": {
            "en": "Please enter a valid hostname",
            "zh": "请输入有效的主机名"
          }
        }
      ]
    },
    "port": {
      "label": {
        "en": "Port",
        "zh": "端口"
      },
      "description": {
        "en": "The port number on which the database server is listening.",
        "zh": "数据库服务器监听的端口号。"
      },
      "flex": 12,
      "required": true,
      "rules": [
        {
          "type": "number",
          "message": {
            "en": "Port must be a number",
            "zh": "端口必须是数字"
          }
        },
        {
          "type": "range",
          "min": 1,
          "max": 65535,
          "message": {
            "en": "Port must be between 1 and 65535",
            "zh": "端口必须在1到65535之间"
          }
        }
      ]
    },
    "isActive": {
      "label": {
        "en": "Active",
        "zh": "活跃状态"
      },
      "description": {
        "en": "Flag to mark if the database connection is active.",
        "zh": "标记数据库连接是否活跃。"
      },
      "flex": 12,
      "required": true
    },
    "databaseType": {
      "label": {
        "en": "Database Type",
        "zh": "数据库类型"
      },
      "description": {
        "en": "The type of database.",
        "zh": "要连接的数据库类型。"
      },
      "flex": 24,
      "required": true,
      "options": [
        {
          "label": {
            "en": "MySQL",
            "zh": "MySQL"
          },
          "value": "MySQL"
        },
        {
          "label": {
            "en": "PostgreSQL",
            "zh": "PostgreSQL"
          },
          "value": "PostgreSQL"
        },
        {
          "label": {
            "en": "SQLite",
            "zh": "SQLite"
          },
          "value": "SQLite"
        },
        {
          "label": {
            "en": "MongoDB",
            "zh": "MongoDB"
          },
          "value": "MongoDB"
        }
      ]
    },
    "maxConnections": {
      "label": {
        "en": "Max Connections",
        "zh": "最大连接数"
      },
      "description": {
        "en": "The maximum number of database connections.",
        "zh": "最大数据库连接数。"
      },
      "flex": 12,
      "required": true,
      "rules": [
        {
          "type": "min",
          "value": 1,
          "message": {
            "en": "Max connections must be at least 1.",
            "zh": "最大连接数至少为1。"
          }
        },
        {
          "type": "number",
          "message": {
            "en": "Max connections must be a number",
            "zh": "最大连接数必须是数字"
          }
        }
      ]
    },
    "connectionOptions": {
      "label": {
        "en": "Connection Options",
        "zh": "连接选项"
      },
      "description": {
        "en": "A list of additional options for the database connection.",
        "zh": "数据库连接的附加选项列表。"
      },
      "itemForm": {
        "optionName": {
          "label": {
            "en": "Option Name",
            "zh": "选项名称"
          },
          "description": {
            "en": "The name of the option.",
            "zh": "选项的名称。"
          },
          "flex": 12,
          "required": true,
          "rules": [
            {
              "type": "pattern",
              "value": "^[a-zA-Z0-9_]+$",
              "message": {
                "en": "Option name must only contain alphanumeric characters and underscores",
                "zh": "选项名称只能包含字母、数字和下划线"
              }
            }
          ]
        },
        "optionValue": {
          "label": {
            "en": "Option Value",
            "zh": "选项值"
          },
          "description": {
            "en": "The value of the option.",
            "zh": "选项的值。"
          },
          "flex": 12,
          "required": true
        }
      }
    },
    "security": {
      "label": {
        "en": "Security",
        "zh": "安全配置"
      },
      "description": {
        "en": "The security credentials for the database.",
        "zh": "数据库的安全凭证。"
      },
      "username": {
        "label": {
          "en": "Username",
          "zh": "用户名"
        },
        "description": {
          "en": "The username for database access authentication.",
          "zh": "数据库访问认证的用户名。"
        },
        "flex": 12,
        "required": true,
        "rules": [
          {
            "type": "pattern",
            "value": "^[a-zA-Z0-9_]+$",
            "message": {
              "en": "Username must only contain alphanumeric characters and underscores",
              "zh": "用户名只能包含字母、数字和下划线"
            }
          }
        ]
      },
      "password": {
        "label": {
          "en": "Password",
          "zh": "密码"
        },
        "description": {
          "en": "The password for database access authentication. Can be null.",
          "zh": "数据库访问认证的密码。可以为空。"
        },
        "flex": 12,
        "rules": [
          {
            "type": "pattern",
            "value": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{8,}$",
            "message": {
              "en": "Password must contain at least 8 characters, one uppercase letter, one lowercase letter, one number, and one special character",
              "zh": "密码必须至少包含8个字符，一个大写字母，一个小写字母，一个数字和一个特殊字符"
            }
          }
        ]
      }
    }
  }
}